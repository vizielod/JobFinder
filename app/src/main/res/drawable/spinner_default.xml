<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:endColor="@color/lightgreen_50"
                        android:startColor="@color/lightgreen_75" />
                    <padding
                        android:bottom="7dp"
                        android:left="7dp"
                        android:right="10dp"
                        android:top="10dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#FFF" />
                    <!--android:dashGap="1dp"
                    android:dashWidth="4dp"-->
                    <corners android:radius="27dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
